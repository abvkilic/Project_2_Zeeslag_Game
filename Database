/* create tables */

CREATE TABLE IF NOT EXISTS Deck(
	card_id serial,
    cardType integer,
    cardSort varchar(30),
    cardName varchar(30),
    aantal integer,
    Primary Key(card_id)
);


CREATE TABLE IF NOT EXISTS Highscore(
    id serial,
    playername varchar(30),
    beurten integer,
    Primary Key(id)
);

